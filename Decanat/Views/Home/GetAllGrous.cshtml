@model IEnumerable<Decanat.Models.DecanatModels.Gruppa>
@using Decanat.Models.DecanatModels

@{
    ViewBag.Title = "GetAllGrous";
}

<h2>Список групп</h2>
<p>
    @Html.ActionLink("Добавить группу","")
</p>
<table class="table"">
    <tr>
        <th>
            Название групыы
        </th>
        <th>
            Уровень
        </th>
        <th>
            Кафедра
        </th>
        <th>
            Наличчине ПГ
        </th>
        <th>
            
        </th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.groupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.getLivel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.getKafedraName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isHasPlan)
            </td>
            <td>
                @if(!item.isHasPlan)
                {
                    @Html.ActionLink("Добавить ПГ ", "AddPlan", new { groupId = item.id })  
                }                    
                |
                @Html.ActionLink(" Подробнее","GetGroupInfo", new { id = item.id})
            </td>
        </tr>
    }
</table>
